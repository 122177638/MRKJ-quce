<?php
function noncestr($data){//获取随机数
    if(cookie('noncestr')){
        return cookie('noncestr');
    }else{
        $chars = 'abcdefghijklmnopqrstuvwxyz0123456789';
        $password='';
        for($i=0;$i<=$data;$i++){
            $password.=substr($chars, mt_rand(0, strlen($chars)-1),1);
        }
        cookie('noncestr',$password,7200);
        return $password;
    }
}
